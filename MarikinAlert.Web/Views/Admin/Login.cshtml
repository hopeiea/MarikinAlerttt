@{
    Layout = null; // Standalone page (no navigation bar)
    ViewData["Title"] = "Rescue Command Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Marikina Rescue</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@@phosphor-icons/web"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }</style>
</head>
<body class="bg-[#0f172a] h-screen flex items-center justify-center text-white">

    <div class="w-full max-w-sm p-8">

        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-emerald-500/10 text-emerald-500 mb-4 border border-emerald-500/20">
                <i class="ph-fill ph-siren text-3xl"></i>
            </div>
            <h1 class="text-2xl font-black tracking-tight">Command Center</h1>
            <p class="text-slate-400 text-sm mt-2">Authorized Personnel Only</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-500/10 border border-red-500/20 text-red-400 p-3 rounded-xl mb-6 text-xs font-bold text-center flex items-center justify-center gap-2">
                <i class="ph-fill ph-warning-circle"></i>
                @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post" class="space-y-5">
            @Html.AntiForgeryToken()

            <div class="space-y-1">
                <label class="text-[10px] uppercase font-bold text-slate-500 tracking-wider">Officer ID / Username</label>
                <div class="relative">
                    <input name="username" type="text" class="w-full bg-slate-800/50 border border-slate-700 focus:border-emerald-500 text-white font-bold rounded-xl p-3 pl-10 outline-none transition-all placeholder:text-slate-600" placeholder="admin">
                    <i class="ph-fill ph-user absolute left-3.5 top-3.5 text-slate-500"></i>
                </div>
            </div>

            <div class="space-y-1">
                <label class="text-[10px] uppercase font-bold text-slate-500 tracking-wider">Password</label>
                <div class="relative">
                    <input name="password" type="password" class="w-full bg-slate-800/50 border border-slate-700 focus:border-emerald-500 text-white font-bold rounded-xl p-3 pl-10 outline-none transition-all placeholder:text-slate-600" placeholder="••••••••">
                    <i class="ph-fill ph-lock-key absolute left-3.5 top-3.5 text-slate-500"></i>
                </div>
            </div>

            <button type="submit" class="w-full bg-emerald-500 hover:bg-emerald-400 text-[#0f172a] font-black py-3.5 rounded-xl transition-all active:scale-95 shadow-lg shadow-emerald-500/20 mt-2">
                ACCESS SYSTEM
            </button>

            <a asp-controller="Reports" asp-action="Index" class="block text-center mt-4 text-xs font-bold text-slate-500 hover:text-white transition-colors">
                <i class="ph-bold ph-arrow-left"></i> RETURN TO PUBLIC FEED
            </a>

        </form>

        <p class="text-center text-[10px] text-slate-600 mt-8 font-mono">
            SECURE CONNECTION • MARIKINA RESCUE
        </p>
    </div>

</body>
</html>