@model IEnumerable<MarikinAlert.Web.Models.ArchivedReport>

<div class="p-8">
    <h2 class="text-2xl font-black text-white mb-6 uppercase tracking-widest">Incident History Archive</h2>
    <div class="bg-[#0f172a] rounded-2xl overflow-hidden border border-white/5 shadow-2xl">
        <table class="w-full text-left border-collapse">
            <thead class="text-[10px] text-slate-500 uppercase font-black bg-slate-950">
                <tr>
                    <th class="p-5">Ref ID</th>
                    <th class="p-5">Category</th>
                    <th class="p-5">Location</th>
                    <th class="p-5">Result Status</th>
                    <th class="p-5">Archived Date</th>
                </tr>
            </thead>
            <tbody class="text-xs divide-y divide-white/5 text-slate-300">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-white/[0.02] transition">
                        <td class="p-5 font-mono text-emerald-500">INC-@item.OriginalReportId</td>
                        <td class="p-5 font-bold text-white">@item.Category</td>
                        <td class="p-5">@item.Location</td>
                        <td class="p-5">
                            <span class="px-2 py-1 rounded-md font-bold @(item.Status == "Dispatched" ? "bg-emerald-500/10 text-emerald-500" : "bg-red-500/10 text-red-500")">
                                @item.Status.ToUpper()
                            </span>
                        </td>
                        <td class="p-5 text-slate-500">@item.ArchivedTimestamp.ToString("MMM dd, HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>