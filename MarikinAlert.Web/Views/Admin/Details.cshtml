@model MarikinAlert.Web.Models.DisasterReport

@{
    Layout = null;
    // LOGIC: Auto-select the agency based on Category
    bool isFire = Model.Category == MarikinAlert.Web.Models.ReportCategory.Fire;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incident Details | MarikinAlert</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: #020617; color: #f8fafc; }
        .ai-match { background: rgba(16, 185, 129, 0.2); border-bottom: 2px solid #10b981; color: white; padding: 0 2px; }
        
        /* Classes for Active/Inactive States */
        .agency-active { background-color: #10b981; color: #020617; ring: 4px; ring-color: rgba(16, 185, 129, 0.1); box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.2); }
        .agency-inactive { background-color: rgba(255, 255, 255, 0.05); color: #64748b; border: 1px solid rgba(255, 255, 255, 0.1); opacity: 0.6; }
        .agency-inactive:hover { opacity: 1; border-color: rgba(255, 255, 255, 0.3); }
    </style>
</head>
<body class="antialiased min-h-screen flex items-center justify-center p-4">

    <div class="w-full max-w-[1200px] bg-[#0f172a] border border-white/5 rounded-[2.5rem] p-8 md:p-14 relative overflow-hidden shadow-2xl">
        
        <div class="absolute top-0 right-0 w-96 h-96 bg-emerald-500/5 rounded-full -mr-48 -mt-48 blur-[100px]"></div>

        <a href="/Admin/Dashboard" class="text-emerald-500 font-black text-[10px] uppercase tracking-widest mb-10 flex items-center gap-2 hover:translate-x-[-4px] transition-transform w-fit">
            ← Back to Command Dashboard
        </a>

        <div class="flex flex-wrap items-start justify-between gap-10 mb-12">
            <div class="space-y-4">
                @if(Model.Priority == MarikinAlert.Web.Models.ReportPriority.Critical || Model.Priority == MarikinAlert.Web.Models.ReportPriority.High)
                {
                    <div class="inline-flex items-center gap-2 px-3 py-1 bg-red-500/10 border border-red-500/20 rounded-full">
                        <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
                        <span class="text-[10px] font-black text-red-500 uppercase tracking-widest">Life-Threatening Incident</span>
                    </div>
                }
                else
                {
                     <div class="inline-flex items-center gap-2 px-3 py-1 bg-emerald-500/10 border border-emerald-500/20 rounded-full">
                        <span class="w-2 h-2 bg-emerald-500 rounded-full"></span>
                        <span class="text-[10px] font-black text-emerald-500 uppercase">Standard Alert</span>
                    </div>
                }

                <h2 class="text-5xl md:text-6xl font-black tracking-tighter text-white">@Model.Category</h2>
                <p class="text-slate-400 text-xl font-medium">Case ID: <span class="text-white">INC-@Model.Id</span></p>
            </div>
            
            <div class="bg-slate-900/80 p-10 rounded-[2rem] border border-white/5 text-center shadow-inner">
                <p class="text-[10px] font-black text-slate-500 uppercase mb-2 tracking-widest">AI Confidence</p>
                <p class="text-6xl font-black text-emerald-400">@Model.ConfidenceScore.ToString("0.0")<span class="text-2xl">%</span></p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 mb-12">
            <div class="lg:col-span-2 space-y-8">
                <div class="space-y-4">
                    <h4 class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Linguistic Feature Extraction</h4>
                    <div class="p-8 bg-slate-950 rounded-3xl border border-white/5 font-mono text-2xl leading-relaxed italic text-slate-300">
                        "@Model.RawMessage"
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="p-6 bg-white/5 rounded-2xl border border-white/5">
                        <p class="text-[10px] font-black text-slate-500 uppercase mb-2">Reporter Metadata</p>
                        <p class="text-xl font-black">@Model.SenderName</p>
                        <p class="text-emerald-500 font-bold">@Model.ContactNumber</p>
                    </div>
                    <div class="p-6 bg-white/5 rounded-2xl border border-white/5">
                        <p class="text-[10px] font-black text-slate-500 uppercase mb-2">Location Context</p>
                        <p class="text-xl font-black">@Model.Location</p>
                        <p class="text-slate-400 text-sm">GPS Data N/A (Privacy Mode)</p>
                    </div>
                </div>
            </div>
            
            <div class="space-y-6">
                <div class="p-8 bg-indigo-500/5 rounded-[2rem] border border-indigo-500/20">
                    <h4 class="text-[10px] font-black text-indigo-400 uppercase tracking-widest mb-6">Agency Selection</h4>
                    <div class="space-y-3">
                        
                        <div id="btn-rescue" onclick="selectAgency('rescue')" 
                             class="p-5 rounded-2xl font-black text-sm flex justify-between items-center cursor-pointer transition-all @(isFire ? "agency-inactive" : "agency-active")">
                            MARIKINA RESCUE 161
                            <span class="indicator text-lg">@(isFire ? "" : "✓")</span>
                        </div>

                        <div id="btn-fire" onclick="selectAgency('fire')" 
                             class="p-5 rounded-2xl font-black text-sm flex justify-between items-center cursor-pointer transition-all @(isFire ? "agency-active" : "agency-inactive")">
                            BFP MARIKINA (FIRE)
                            <span class="indicator text-lg">@(isFire ? "✓" : "")</span>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 pt-10 border-t border-white/5">
            <form asp-controller="Admin" asp-action="DispatchReport" method="post" style="flex: 3;">
            <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="w-full bg-emerald-500 text-slate-950 py-7 rounded-[1.5rem] font-black text-2xl uppercase tracking-tighter hover:scale-[1.01] transition-all shadow-2xl shadow-emerald-500/30">
                    CONFIRM & DISPATCH
                </button>
            </form>
            <form asp-controller="Admin" asp-action="MarkAsNoise" method="post" style="flex: 1;">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="w-full bg-slate-800 text-slate-500 py-7 rounded-[1.5rem] font-black text-xs uppercase tracking-widest hover:bg-red-500/10 hover:text-red-400 transition border border-white/5">
                    ARCHIVE AS NOISE
                </button>
            </form>
        </div>
    </div>

    <script>
        function selectAgency(type) {
            const btnRescue = document.getElementById('btn-rescue');
            const btnFire = document.getElementById('btn-fire');
            const activeClasses = ['agency-active'];
            const inactiveClasses = ['agency-inactive'];

            if (type === 'rescue') {
                btnRescue.classList.remove(...inactiveClasses); btnRescue.classList.add(...activeClasses); btnRescue.querySelector('.indicator').innerText = '✓';
                btnFire.classList.remove(...activeClasses); btnFire.classList.add(...inactiveClasses); btnFire.querySelector('.indicator').innerText = '';
            } else {
                btnFire.classList.remove(...inactiveClasses); btnFire.classList.add(...activeClasses); btnFire.querySelector('.indicator').innerText = '✓';
                btnRescue.classList.remove(...activeClasses); btnRescue.classList.add(...inactiveClasses); btnRescue.querySelector('.indicator').innerText = '';
            }
        }
    </script>

</body>
</html>