@{
    ViewData["Title"] = "History";
}

<div class="space-y-6 mt-2">
    <h2 class="text-xl font-bold">Incident History</h2>

    <div class="space-y-2">
        <div class="p-4 rounded-xl border border-white/5 flex justify-between items-center bg-white/5 opacity-70">
            <div>
                <p class="font-bold text-sm text-slate-300">Medical Assist</p>
                <p class="text-[10px] text-slate-500">Yesterday, 4:00 PM</p>
            </div>
            <span class="text-[10px] font-bold text-emerald-500 border border-emerald-500/30 px-2 py-1 rounded">RESOLVED</span>
        </div>

        <div class="p-4 rounded-xl border border-white/5 flex justify-between items-center bg-white/5 opacity-70">
            <div>
                <p class="font-bold text-sm text-slate-300">False Alarm</p>
                <p class="text-[10px] text-slate-500">Yesterday, 2:30 PM</p>
            </div>
            <span class="text-[10px] font-bold text-slate-500 border border-slate-500/30 px-2 py-1 rounded">DISMISSED</span>
        </div>
    </div>
</div>